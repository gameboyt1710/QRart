# Database connection string
# For local dev: postgresql://user:password@localhost:5432/qrart?schema=public
# For Railway: Use the DATABASE_URL provided by Railway Postgres addon
DATABASE_URL="postgresql://postgres:password@localhost:5432/qrart?schema=public"

# Server port
PORT=4000

# API Key for authentication (comma-separated for multiple keys)
# In production, you would want a proper user/API key management system
# For MVP, this simple approach works
API_KEYS="dev-api-key-12345,artist-key-67890"

# CORS allowed origins (comma-separated)
# Include your web UI URL and extension origin
# For MVP, we allow all origins but log a warning
CORS_ORIGINS="http://localhost:5173,chrome-extension://*"

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
