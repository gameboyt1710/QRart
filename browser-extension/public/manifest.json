{
  "manifest_version": 3,
  "name": "QRart",
  "version": "1.0",
  "description": "Reveal QRart images on Twitter/X",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_title": "QRart Settings",
    "default_popup": "options.html"
  }
}
